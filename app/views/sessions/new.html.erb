<div class="row">
  <div class="col-md-6">
    <h2>Log In</h2>
    <%= form_tag '/login' do %>
      <div class="form-group">
        <%= label_tag :email %>
        <%= email_field_tag :email, nil, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= label_tag :password %>
        <%= password_field_tag :password, nil, class: 'form-control' %>
      </div>
      <%= submit_tag "Login", class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
